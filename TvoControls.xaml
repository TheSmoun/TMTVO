<Window x:Class="TMTVO.TvoControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TM iRacing TVO" Height="600" Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="Running" Grid.Row="0" Margin="0" Fill="Red" />
        <Button x:Name="StartStopButton" Grid.Row="0" Content="Start" Height="25" Width="100" Click="StartStopButton_Click" />
        <Grid x:Name="InnerGrid" Grid.Row="1" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:Name="SessionTimer" Grid.Row="0" Content="Session Timer" Height="25" Width="100" Click="SessionTimer_Click" />
            <Grid x:Name="RaceButtons" Grid.Row="1" Visibility="Hidden">

            </Grid>
            <Grid x:Name="NormalButtons" Grid.Row="1" Visibility="Hidden">

            </Grid>
        </Grid>
    </Grid>
</Window>
